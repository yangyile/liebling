<section class="tag-card-wrapper">
  {{#foreach tags}}
    <style>
      .tag-card-wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 0 20px;
      }
      .tag-card-wrapper .tag-card-item-wrapper {
        display: flex;
        align-items: center;
        position: relative;
        width: 100%;
        height: 200px;
        margin: 0 10px 30px;
        text-align: center;
        background-color: var(--secondary-subtle-color);
        color: var(--titles-color);
        cursor: pointer;
        transition: all .3s;
        box-shadow: 0 5px 5px rgba(0, 0, 0, 0.05);
      }
      .tag-card-wrapper .tag-card-item-wrapper .tag-card-background {
        display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 1;
      }
      .tag-card-wrapper .tag-card-item-wrapper:hover {
        transform: scale(1.07);
      }
      .tag-card-wrapper .tag-card-item-wrapper .tag-card-content {
        width: 100%;
        z-index: 2;
      }
      .tag-card-wrapper .tag-card-item-wrapper .tag-card-content.tag-card-color-white {
        color: white;
      }
      .tag-card-wrapper .tag-card-item-wrapper h3 {
        margin-block-end: 0;
        margin-block-start: 0;
        margin-bottom: 1rem;
      }
      .tag-card-wrapper .tag-card-item-wrapper .tag-card-name {
        font-size: 2rem;
      }
      .tag-card-wrapper .tag-card-item-wrapper .tag-card-posts-count {
        font-size: .875rem;
      }
      @media (min-width: 576px) {
        .tag-card-wrapper .tag-card-item-wrapper {
          width: calc((100% - 40px)/2);
        }
      }
      @media (min-width: 768px) {
        .tag-card-wrapper .tag-card-item-wrapper {
          width: calc((100% - 60px)/3);
        }
      }
    </style>
    <a href={{url}} class="tag-card-item-wrapper">
      <div class="tag-card-content {{#if feature_image}}tag-card-color-white{{/if}}">
        <h3 class="tag-card-name">{{name}}</h3>
        <div class="tag-card-posts-count">
          {{#get "posts" filter="tag:{{slug}}"}}
            {{plural pagination.total empty=(t "No POSTS") singular=(t "% POST") plural=(t "% POSTS")}}
          {{/get}}
        </div>
      </div>
      {{#if feature_image}}
        <img src={{feature_image}} class="tag-card-background"></img>
      {{/if}}
    </a>
  {{/foreach}}
</section>
